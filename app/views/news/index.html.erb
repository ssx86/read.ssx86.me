<div id="body-content">
  <div class="h-center font-large">
    <h1>Today's news</h1>
  </div>
  <ul>
    <% @all_news.each do |news| %>
      <li>
        <div class='news-item'>
          <%= link_to "[#{news.channel}]#{news.title}", show_news_path(news)  %>
          <p>Date: <%= news.date %></p>
          <p><%= news.desc %></p>
        </div>
      </li>
    <% end %>
  </ul>

  <div class="center digg_pagination">
    <%= will_paginate @all_news, :container => false %>
  </div>
</div>

